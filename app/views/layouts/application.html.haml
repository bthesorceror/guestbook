%html
	%head
		%title
			Guest Book
		%link{:rel => "stylesheet",:href => "http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css",:type => "text/css"}
		=stylesheet_link_tag "main", "wall"
		=javascript_include_tag :defaults
		= javascript_include_tag "jquery.timeago" 
		= javascript_include_tag "livequery"
		= javascript_include_tag "jquery-ui"
		=csrf_meta_tag
		%script{:type => "text/javascript"}
			:plain
				$(document).ready(function() {
					$(".timeago").timeago();
					$(".alert-message").fadeOut(5000);
				});
				
	%body
		.topbar{:data => {:dropdown => "dropdown"}}
			.topbar-inner
				.container
					.brand
						Hobo Joe Software
					%ul.nav
						%li
							=link_to("Guest Book", root_path)
						%li
							=link_to("About", about_path)
					%p.pull-right{:style=>"color:#BFBFBF;text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);"}
						- if current_user
							Welcome,
							=current_user.nick
							|
							=link_to("Logout", signout_path)
						- else
							=link_to("Login", login_path)
		.container
			.content
				.page-header
					%h1
						Guest Book 2.0
						%small
							Make your mark
				.container{:id=>"messages"}
					- if notice
						%div{:class=>"alert-message success"}
							%p=notice
					- if alert
						%div{:class=>"alert-message error"}
							%p=alert
				=yield
			%footer
				%p
					&copy; Hobojoe Software 2011
